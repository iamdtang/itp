<div class="page-header">
  <h1>ITP {{model.course_number}} - {{model.course_name}}</h1>
</div>

<div class="row">
  <div class="col-md-12">
    {{#liquid-if showDetails}}
      <p>
        Semester: {{model.semester}} {{model.year}}
      </p>
      <p>
        Time: {{model.time}}
      </p>
      <p>
        <a href="{{model.syllabus}}" target="_blank">Syllabus</a>
      </p>
    {{else}}
      <a href="" {{action 'viewCourseDetails'}}>View Course Details</a>
    {{/liquid-if}}
  </div>
</div>

<div class="row">
  <div class="col-md-7">
    <h3 class="block-title">Lectures</h3>

    {{#each activeLectures as |lecture|}}
      <div class="lecture">
        <p class="lecture-date">{{lecture.date}}</p>

        {{#if lecture.title}}
          <h4>{{lecture.title}}</h4>
        {{/if}}

        {{#each lecture.units as |unit|}}
          {{lecture-unit unit=unit}}
        {{/each}}
      </div>
    {{/each}}
  </div>
  <div class="col-md-5">
    <h3 class="block-title">Assignments</h3>
    <ol>
      {{#each model.assignments as |assignment|}}
        <li>
          {{#link-to 'assignment' assignment.id}}
            {{assignment.name}} due {{assignment.due}}
          {{/link-to}}
        </li>
      {{/each}}
    </ol>
  </div>
</div>
