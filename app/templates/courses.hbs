<h1>ITP Web Development Courses</h1>

<p>
  Please choose a course to visit the class site.
</p>

<ul id="course-list" class="course-list">
  {{#each activeCourses as |course|}}
    <li class="course {{if course.archived 'archived-course' 'active-course'}}">
      {{#link-to 'courses.course' course.id}}
        {{course.semester}} {{course.year}}: ITP {{course.course_number}} - {{course.course_name}}
        {{#if course.archived}}
          (Archived)
        {{/if}}
      {{/link-to}}
    </li>
  {{/each}}
</ul>

{{outlet}}
